<li class="gallery__item">
    <div class="photo-card">
        <img class="image" src={{webformatURL}} alt="" data-src={{largeImageURL}} />

        <div class="stats">
            <p class="stats-item">
                <i class="material-icons lightblue">thumb_up</i>
                {{likes}}
            </p>
            <p class="stats-item">
                <i class="material-icons skyblue">visibility</i>
                {{views}}
            </p>
            <p class="stats-item">
                <i class="material-icons powderblue">comment</i>
                {{comments}}
            </p>
            <p class="stats-item">
                <i class="material-icons rgb">cloud_download</i>
                {{downloads}}
            </p>
        </div>
    </div>
</li>